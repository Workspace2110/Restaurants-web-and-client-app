@model Cloud_homework4.Models.Restaurant

@{
    ViewData["Title"] = "刪除餐廳";
}

<h2 class="text-center">你確定要刪除 @Html.DisplayFor(model => model.Name) 的資料嗎?</h2>
<div class="">
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MinPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MinPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaxPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaxPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group row float-lg-left form-sm-inline">
            <input type="submit" value="刪除" class="form-control btn btn-danger" />
        </div>
        <div class="form-group row float-lg-right form-sm-inline">
            <a class="form-control btn btn-secondary" role="button" asp-action="Index">返回清單</a>
        </div>
    </form>
</div>
