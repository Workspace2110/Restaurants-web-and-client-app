
@{
    ViewData["Title"] = "API Helper";
}

<div class="text-center">
    <h1 class="display-4">Welcome to API helper</h1>
</div>
<div class="" style="font-size:20px">
    <div class="card text-white bg-success">
        <div class="card-header">GET method 1</div>
        <div class="card-body">
            <div class="card-text">URL format: https://{host}/api/</div>
            <div class="card-text">Return type: json</div>
        </div>
    </div>
    <br />
    <div class="card text-white bg-success">
        <div class="card-header">GET method 2</div>
        <div class="card-body">
            <div class="card-text">URL format: https://{host}/api/{id}</div>
            <div class="card-text">Return type: json</div>
        </div>
    </div>
    <br />
    <div class="card text-white bg-success">
        <div class="card-header">GET method 3</div>
        <div class="card-body">
            <div class="card-text">URL format: https://{host}/api/genres</div>
            <div class="card-text">Return type: json</div>
        </div>
    </div>
    <br />
    <div class="card text-white bg-success">
        <div class="card-header">GET method 4</div>
        <div class="card-body">
            <div class="card-text">URL format: https://{host}/api/genre/{str_genre}</div>
            <div class="card-text">Return type: json</div>
        </div>
    </div>
    <br />
    <div class="card text-white bg-success">
        <div class="card-header">GET method 5</div>
        <div class="card-body">
            <div class="card-text">URL format: https://{host}/api/search/{str_search}</div>
            <div class="card-text">Return type: json</div>
        </div>
    </div>
    <br />
    <div class="card text-white bg-primary">
        <div class="card-header">POST method</div>
        <div class="card-body">
            <div class="card-text">URL format: https://{host}/api/</div>
            <div class="card-text">Data format: Name:{string}, Genre:{string}, MinPrice:{decimal?}, MaxPrice{decimal?}</div>
        </div>
    </div>
    <br />
    <div class="card text-white bg-danger">
        <div class="card-header">DELETE method</div>
        <div class="card-body">
            <div class="card-text">URL format: https://{host}/api/{Id}</div>
        </div>
    </div>
</div>